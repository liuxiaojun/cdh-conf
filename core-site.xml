<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>

<configuration>
	<property>
		 <name>hadoop.tmp.dir</name>
		 <value>/etc/hadoop/data</value>
		 <description>A base for other temporary directories.</description>
	</property>
			
	<property>
		 <name>fs.defaultFS</name>
		<value>hdfs://10.11.0.17:49000</value>
		<description>The name of the default file system.  A URI whose
			  scheme and authority determine the FileSystem implementation.  The
			  uri's scheme determines the config property (fs.SCHEME.impl) naming
			  the FileSystem implementation class.  The uri's authority is used to
			  determine the host, port, etc. for a filesystem.
		</description>
	</property>

        <property>
                 <name>io.native.lib.available</name>
                 <value>true</value>
                 <description>Controls whether to use native libraries for bz2 and zlib compression codecs or not. The property does not control any other native libraries.
		</description>
        </property>

        <property>
                 <name>fs.trash.interval</name>
                 <value>1440</value>
                 <description> </description>
        </property>
        <property>
          <name>io.compression.codecs</name>
          <value>org.apache.hadoop.io.compress.DefaultCodec,org.apache.hadoop.io.compress.GzipCodec,org.apache.hadoop.io.compress.BZip2Codec,org.apache.hadoop.io.compress.LzoCodec</value>
          <description></description>
        </property>
</configuration>
